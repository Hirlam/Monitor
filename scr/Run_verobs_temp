#!/bin/ksh

set -axk

. Env_exp

############ functions
############ functions
############ functions
function experiments {

F=1
EXPNAME=""
  echo '  MODPATH=' >> fort.10
  while [ $F -le $NEXP ] ; do
  echo    \'${MODPATH[$F]}\', >> fort.10
  F=$( expr $F + 1 ) 
done

cat << EOF >> fort.10
  NEXP=$NEXP
  OBSPATH ='$OBSPATH',
  PRINT_READ = 0,
  EXPNAME =
EOF
F=1
while [ $F -le $NEXP ] ; do
  echo \'${EXP[$F]}\', >> fort.10
  F=$( expr $F + 1 ) 
done

}
############ functions
############ functions
############ functions
function end_of_namelist {
cat << EOF >> fort.10
/
EOF
}
############ functions
############ functions
############ functions
function variables {

cat << EOF >> fort.10
 NPARVER =          30,
 FF_IND  =          1,
 DD_IND  =          2,
 TT_IND  =          3,
 RH_IND  =          4,
 QQ_IND  =          5,
 FI_IND  =          6,
 LTEMP   = T,
 LEV_LST = 850,700,500,300,200,
EOF

}
############ functions
############ functions
############ functions

cd $BASE/wrk || exit

rm -f *.ps *.png *.jpg fort.* temp.tar vert.tar

cat << EOF > fort.10
 &NAMVER
 SDATE = $SDATE,
 EDATE = $EDATE,
 MAXSTN = 200,
 STNLIST = 0,
 STATNAME='Temp_LL.html'
 FCINT      = 12,
 OBINT      = 12
 NFCLENGTHS = 2
 FCLEN      = 12,24,
 LFCVER = T,
 DATA_TO_VERIFY = 2,
 LPLOT_STAT= T,
 LPRINT_GROSS    = T,
 LREJECT_GROSS   = T,
 LSTAT_GEN = T,
EOF

experiments
variables
end_of_namelist

cp fort.10 namelist_temp

$BIN/verobs || exit


cat << EOF > fort.10
 &NAMVER
 SDATE = $SDATE,
 EDATE = $EDATE,
 MAXSTN = 200,
 STNLIST = 0,
 STATNAME='vert_temp_HH.html'
 NTIMVER    = 4
 NFCLENGTHS = 2
 FCLEN      = 12,24,
 FCINT      = 12,
 OBINT      = 12
 LFCVER = F,
 DATA_TO_VERIFY = 2,
 LPRINT_GROSS          = T,
 LPLOT_VERT= T,
 LTIMESERIE_STAT= T
 TIMESERIE_WIND = 12,
 LDIFF = T,
 LREJECT_GROSS   = T,
 LSTAT_GEN = T,
 LPREP_XML = T,
EOF

experiments
variables
end_of_namelist

cp fort.10 namelist_vert

$BIN/verobs || exit

[[ $WEBCALL == ""  ]] && exit

#
# Convert/rename plots
#

mkdir vert 
if [ $OUTPUT_TYPE -eq 1 ] ; then
   mv l*.ps vert
   $BASE/scr/ps2png 6 5 $NEXP '-resize 75% -rotate 90'
   tar cvf temp.tar *.png
elif [ $OUTPUT_TYPE -eq 2 ] ; then
   mv l*.png vert
   $BASE/scr/png2png 6 5 $NEXP png
   tar cvf temp.tar *.png
elif [ $OUTPUT_TYPE -eq 3 ] ; then
   mv l*.jpg vert
   $BASE/scr/png2png 6 5 $NEXP jpg
   tar cvf temp.tar *.jpg
fi


#Vertical
cp $BASE/scr/style.xsl .
if [ $OUTPUT_TYPE -eq 1 ] ; then
   mv vert/*.ps .
   $BASE/scr/ps2png 6 1 $NEXP '-resize 75%'
   tar cvf vert.tar *.png *.xml style.xsl
elif [ $OUTPUT_TYPE -eq 2 ] ; then
   mv vert/*.png .
   $BASE/scr/png2png 6 1 $NEXP png
   tar cvf vert.tar *.png *.xml style.xsl
elif [ $OUTPUT_TYPE -eq 3 ] ; then
   mv vert/*.jpg .
   $BASE/scr/png2png 6 1 $NEXP jpg
   tar cvf vert.tar *.jpg *.xml style.xsl
fi

rmdir vert

$WEBCALL -e Temp -f temp.tar
$WEBCALL -e Vert -f vert.tar

rm -f *.png *.tar *.ps *.jpg *.xml || true
