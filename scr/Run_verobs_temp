#!/bin/ksh

set -axk

. Env_exp

cd $WRK || exit

rm -f *.ps *.png *.jpg fort.* temp.tar vert.tar fort.10

# Experiment names and paths

cat << EOF > fort.10
&NAMVER
EOF

cat << EOF >> fort.10
  OBSPATH ='$OBSPATH',
  OUTPUT_TYPE=$OUTPUT_TYPE, 
  PRINT_READ = 0,
  EXPNAME =
EOF

F=1
while [ ${EXP[$F]} ] ; do
  echo \'${EXP[$F]}\', >> fort.10
  F=$( expr $F + 1 ) 
done

echo '  MODPATH=' >> fort.10
F=1
while [ ${MODPATH[$F]} ] ; do
  echo    \'${MODPATH[$F]}\', >> fort.10
  F=$( expr $F + 1 ) 
done
NEXP=$( expr $F - 1 ) 

NLEV=0
for LEV in $LEV_LST ; do
   NLEV=$( expr $NLEV + 1 ) 
done

NPARVER=$( expr $NLEV \* 6 ) 

LEV_LST=`echo $LEV_LST | sed "s/ /,/g"`

cat << EOF >> fort.10
  NEXP=$NEXP
 SDATE = $SDATE,
 EDATE = $EDATE,
 MAXSTN = 600,
 STNLIST = 0,
 STATNAME='Temp.html'
 FCINT      = 06,
 OBINT      = 12
 FCLEN      = 00,12,24,36,48,
 LFCVER = T,
 DATA_SOURCE = 'vfld_temp',
 LPLOT_STAT= T,
 LSTAT_GEN = T,
 NPARVER = $NPARVER,
 FF_IND  =          1,
 DD_IND  =          2,
 TT_IND  =          3,
 RH_IND  =          4,
 QQ_IND  =          5,
 FI_IND  =          6,
 LTEMP   = T,
 LEV_LST = $LEV_LST
 LQUALITY_CONTROL  = T
 ESTIMATE_QC_LIMIT = T
 QC_LIM_SCALE = 3.,
 LPLOT_VERT= T,
 LPREP_XML = T,
 LTIMESERIE_STAT= T
 TIMESERIE_WIND = 30*12,
 LDIFF =T
 SHOW_STDV=T
/
EOF


cp fort.10 namelist_temp

$BIN/verobs || exit


[[ $WEBCALL == ""  ]] && exit

#
# Convert/rename plots
#

mkdir vert 
if [ $OUTPUT_TYPE -eq 1 ] ; then
   mv L*.ps vert
   $SCR/ps2png 6 $NLEV $NEXP '-resize 75% -rotate 90'
   tar cvf temp.tar *.png *.ps
elif [ $OUTPUT_TYPE -eq 2 ] ; then
   mv L*.png vert
   $SCR/png2png 6 $NLEV $NEXP png
   tar cvf temp.tar *.png
elif [ $OUTPUT_TYPE -eq 3 ] ; then
   mv L*.jpg vert
   $SCR/png2png 6 $NLEV $NEXP jpg
   tar cvf temp.tar *.jpg
fi

rm -f *.jpg *.ps *.png

#Vertical
cp $SCR/style.xsl .
if [ $OUTPUT_TYPE -eq 1 ] ; then
   rm -f *.ps
   mv vert/*.ps .
   $SCR/ps2png 6 1 $NEXP '-resize 75%'
   tar cvf vert.tar *.png *.xml style.xsl *.html *.ps
elif [ $OUTPUT_TYPE -eq 2 ] ; then
   rm -f *.png
   mv vert/*.png .
   $SCR/png2png 6 1 $NEXP png
   tar cvf vert.tar *.png *.xml style.xsl *.html
elif [ $OUTPUT_TYPE -eq 3 ] ; then
   rm -f *.jpg
   mv vert/*.jpg .
   $SCR/png2png 6 1 $NEXP jpg
   tar cvf vert.tar *.jpg *.xml style.xsl *.html
fi 

rmdir vert

$WEBCALL -e Temp -f temp.tar
$WEBCALL -e Vert -f vert.tar

rm -f *.png *.tar *.ps *.jpg *.xml || true
