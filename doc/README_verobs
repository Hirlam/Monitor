 LFCVER = F,
 DATA_TO_VERIFY = 2,
 LPRINT_GROSS          = T,
 LPLOT_VERT= T,               ! Plot vertical profiles
 LTIMESERIE_STAT= T
 TIMESERIE_WIND = 12,
 LDIFF = T,
 LREJECT_GROSS   = T,
 LSTAT_GEN = T,
 LPREP_XML = T,
  MODPATH=
'/data/proj_ns1/hirfou/uandrae/harmonie/monitor/dat/al00_31t0/',
'/data/proj_ns1/hirfou/uandrae/harmonie/monitor/dat/ALD/',
  NEXP=2
  OBSPATH ='/data/proj_ns1/hirfou/uandrae/harmonie/monitor/dat/obs/',
  PRINT_READ = 0,
  EXPNAME =
'al00_31t0',
'ALD',
 NPARVER =          30,
 FF_IND  =          1,
 DD_IND  =          2,
 TT_IND  =          3,
 RH_IND  =          4,
 QQ_IND  =          5,
 FI_IND  =          6,
 LTEMP   = T,
 LEV_LST = 850,700,500,300,200,
/


# The monthly verification is controled by setting
PERIOD_TYPE = 2
Number of consecituve months to accumulate over is controlled by
PERIOD_FREQ = 1

For usage of the namelist variables read the definition in src/module_data.f90
